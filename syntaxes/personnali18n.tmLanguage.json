{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "I18nLocal",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.personnali18n",
				"begin": "~",
				"end": "~"
				}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.number-sign.personnali18n",
				"match": "\\b(#)\\b"
			}]
		},
		"strings": {
			"name": "string.unquoted.personnali18n",
			"begin": "{",
			"end": "}",
			"patterns": []
		}
	},
	"scopeName": "source.personnali18n",
	"fileTypes": ["i18n"]
}